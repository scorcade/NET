<Window x:Class="WpfApp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel  >

            <StackPanel DockPanel.Dock="Bottom" Background="LightPink" Height="100"/>
            <StackPanel  Height="50"  Background="LightBlue"  DockPanel.Dock="Top">
                <Label Content="Top"/>
            </StackPanel>
            <StackPanel DockPanel.Dock="Left" Background="LightGray" Width="100"/>

            <StackPanel DockPanel.Dock="Right" Background="LightGreen" Width="100"></StackPanel>

            <Grid Background="BlueViolet"/>


        </DockPanel>

    </Grid>
</Window>
